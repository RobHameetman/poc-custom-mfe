{
  "name": "@microfrontend-example/core",
  "version": "0.2.69",
  "description": "An event-driven orchestration layer",
  "author": "Robert H. Hameetman <engineering@robhameetman.com>",
  "homepage": "https://www.robhameetman.com/",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RobHameetman/packages.git"
  },
  "bugs": {
    "url": "https://github.com/RobHameetman/packages/issues"
  },
  "main": "./dist/prod/core.esm.js",
  "module": "./dist/dev/core.umd.js",
  "typings": "./dist/declarations/index.d.ts",
  "directories": {
    "lib": "src",
    "test": "__test__"
  },
  "scripts": {
    "build": "concurrently npm:build:dev npm:build:prod",
    "build:dev": "NODE_ENV=development npm run rollup",
    "build:prod": "NODE_ENV=production npm run rollup",
    "release": "npm run release:patch",
    "release:major": "npm run build && npm version major && npm publish",
    "release:minor": "npm run build && npm version minor && npm publish",
    "release:patch": "npm run build && npm version patch && npm publish",
    "rollup": "rollup -c rollup.config.js src/index.ts",
    "test": "NODE_ENV=testing jest -co --watch --notify"
  },
  "dependencies": {
    "systemjs": "^6.5.0"
  },
  "devDependencies": {
    "@rob.hameetman/eslint-config": "0.0.11",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-replace": "^2.3.3",
    "@rollup/plugin-typescript": "^5.0.2",
    "@types/jest": "^26.0.10",
    "@types/node": "^12.7.5",
    "@types/systemjs": "^6.1.0",
    "concurrently": "^5.3.0",
    "jest": "^26.4.2",
    "rollup": "^1.21.4",
    "rollup-plugin-typescript": "^1.0.1",
    "rollup-plugin-typescript2": "^0.27.2",
    "ts-node": "^8.4.1",
    "tslib": "^1.10.0",
    "typescript": "^3.9.7"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@rob.hameetman/eslint-config"
    ],
    "globals": {
      "__DEV__": true
    }
  },
  "eslintIgnore": [
    "dist"
  ],
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?*.spec.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  }
}
