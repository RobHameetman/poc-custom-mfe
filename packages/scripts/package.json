{
  "name": "@microfrontend-example/scripts",
  "version": "1.0.8",
  "description": "Shared build pipeline automation, centralized testing automation, and other commands",
  "author": "Robert H. Hameetman <engineering@robhameetman.com>",
  "homepage": "https://www.robhameetman.com/",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RobHameetman/packages.git"
  },
  "bugs": {
    "url": "https://github.com/RobHameetman/packages/issues"
  },
  "main": "./dist/main/index.js",
  "module": "./dist/module/index.js",
  "typings": "./dist/main/index.d.ts",
  "bin": {
    "microfe": "./bin/index.js"
  },
  "scripts": {
    "build": "NODE_ENV=production tsc",
    "dev": "NODE_ENV=development tsc --watch",
    "lint": "eslint ./src/* --ext=ts --fix",
    "prod": "NODE_ENV=production node ./dist/index.js",
    "test": "NODE_ENV=testing jest -co --watch --notify"
  },
  "dependencies": {
    "@rob.hameetman/eslint-config": "^0.0.11",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "case-sensitive-paths-webpack-plugin": "^2.3.0",
    "chalk": "^4.1.0",
    "css-loader": "^3.5.3",
    "eslint": "^7.2.0",
    "eslint-loader": "^4.0.2",
    "fork-ts-checker-webpack-plugin": "^4.1.6",
    "html-webpack-plugin": "^4.3.0",
    "mini-css-extract-plugin": "^0.9.0",
    "open": "^7.0.4",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "plugin-typescript": "^8.0.0",
    "postcss-flexbugs-fixes": "^4.2.1",
    "postcss-loader": "^3.0.0",
    "postcss-normalize": "^9.0.0",
    "postcss-preset-env": "^6.7.0",
    "postcss-safe-parser": "^4.0.2",
    "react-dev-utils": "^10.2.1",
    "resolve": "^1.17.0",
    "style-loader": "^1.2.1",
    "systemjs": "^6.3.2",
    "terser-webpack-plugin": "^3.0.3",
    "ts-loader": "^7.0.5",
    "url-loader": "^4.1.0",
    "webpack": "^4.43.0",
    "webpack-dev-server": "^3.11.0",
    "webpack-manifest-plugin": "^2.2.0"
  },
  "devDependencies": {
    "@types/case-sensitive-paths-webpack-plugin": "^2.1.4",
    "@types/express": "^4.17.6",
    "@types/fork-ts-checker-webpack-plugin": "^0.4.5",
    "@types/html-webpack-plugin": "^3.2.3",
    "@types/jest": "^25.2.1",
    "@types/mini-css-extract-plugin": "^0.9.1",
    "@types/node": "^13.11.0",
    "@types/optimize-css-assets-webpack-plugin": "^5.0.1",
    "@types/postcss-flexbugs-fixes": "^4.2.0",
    "@types/postcss-safe-parser": "^4.0.0",
    "@types/react-dev-utils": "^9.0.4",
    "@types/resolve": "^1.17.1",
    "@types/styled-components": "^5.1.0",
    "@types/systemjs": "^6.1.0",
    "@types/terser-webpack-plugin": "^3.0.0",
    "@types/webpack": "^4.41.17",
    "@types/webpack-dev-server": "^3.11.0",
    "@types/webpack-manifest-plugin": "^2.1.0",
    "husky": "^4.2.3",
    "ts-jest": "^25.3.1",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3",
    "yalc": "^1.0.0-pre.35"
  },
  "eslintConfig": {
    "extends": [
      "@rob.hameetman/eslint-config"
    ],
    "globals": {
      "document": "readonly",
      "window": "readonly"
    },
    "rules": {
      "consistent-return": "off",
      "no-console": "off",
      "max-params": "off",
      "sort-imports": [
        "error",
        {
          "ignoreDeclarationSort": true
        }
      ],
      "import/no-cycle": "off",
      "import/no-extraneous-dependencies": "off"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?*.spec.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-publish": "npm run build"
    }
  }
}
